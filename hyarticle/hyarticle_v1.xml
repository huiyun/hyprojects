                               		/>
                               		
                               	<field name="hyarticle_imgfull" type="text" default="hy-imgfull" size="30"
                               		description="PLG_CONTENT_HYARTICLE_IMGFULL_DESC"
                               		label="PLG_CONTENT_HYARTICLE_IMGFULL_LABEL"                            
                               		/>
                               		
                               	<field name="hyarticle_caption" type="text" default="hy-caption" size="30"
                               		description="PLG_CONTENT_HYARTICLE_CAPTION_DESC"
                               		label="PLG_CONTENT_HYARTICLE_CAPTION_LABEL"                            
                               		/>					

			</fieldset>

		</fields>
	 </config>

</extension>
