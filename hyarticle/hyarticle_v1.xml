	 <files>
                <filename plugin="hyarticle">hyarticle.php</filename>
                <filename>index.html</filename>
                <filename>gpl-3.0.txt</filename>
        </files>
        <languages>
                <language tag="en-GB">languages/en-GB.plg_content_hyarticle.ini</language>
                <language tag="en-GB">languages/en-GB.plg_content_hyarticle.sys.ini</language>
        </languages>

	 <config>
		<fields name="params">

			<fieldset name="basic">

				<field name="hyarticle_readmore" type="text" default="hy-readmore" size="30"
                               		description="PLG_CONTENT_HYARTICLE_READMORE_DESC"
                               		label="PLG_CONTENT_HYARTICLE_READMORE_LABEL"                            
                               		/>
                               		
                               	<field name="hyarticle_edit" type="text" default="hy-edit" size="30"
                               		description="PLG_CONTENT_HYARTICLE_EDIT_DESC"
                               		label="PLG_CONTENT_HYARTICLE_EDIT_LABEL"                            
                               		/>
                               		
                               	<field name="hyarticle_title" type="text" default="hy-title" size="30"
                               		description="PLG_CONTENT_HYARTICLE_TITLE_DESC"
                               		label="PLG_CONTENT_HYARTICLE_TITLE_LABEL"                            
                               		/>
                               		
                               	<field name="hyarticle_imgintro" type="text" default="hy-imgintro" size="30"
                               		description="PLG_CONTENT_HYARTICLE_IMGINTRO_DESC"
